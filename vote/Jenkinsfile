pipeline{
  agent{
    docker{
    image 'python:2.7.16-slim' 
    args '--user root'
    }
  } 

  stages{
    stage('build'){
      when{
        changeset "**/vote/**"
      }

      steps{
        echo 'Building vote app'
        dir('vote'){
          sh 'pip install -r requirements.txt'
        }
      }
    }
   
    stage(test){
      when{
        changeset "**/vote/**"
      }
      steps{
        echo 'Running tests on vote app'
        dir('vote'){
         sh 'nosetests -v'
        }
      }
    }

  }


  post{
    always{ 
      echo 'Building multibranch pipeline for vote is completed...'
    }
    failure{
      slackSend (channel: "lfs261", message: "Build Failed! - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open)")
    }
    success{
      slackSend (channel: "lfs261", message: "Build Failed! - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open)")
    }
  }
}
